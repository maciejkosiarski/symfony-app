<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item {% if currentPage == 1 %} disabled {% endif %}">
            <a class="page-link" href="{{ url('exercise_index', {'page': 1, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">First</a>
        </li>

        <li class="page-item {% if currentPage == 1 %} disabled {% endif %}">
            <a class="page-link" href="{{ url('exercise_index', {'page': currentPage - 1, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">Previous</a>
        </li>

        {% if currentPage > 3 %}

            <li class="page-item"><a class="page-link" href="{{ url('exercise_index', {'page': currentPage - 3, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">{{ currentPage - 3 }}</a></li>

        {% endif %}

        {% if currentPage > 2 %}

            <li class="page-item"><a class="page-link" href="{{ url('exercise_index', {'page': currentPage - 2, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">{{ currentPage - 2 }}</a></li>

        {% endif %}

        {% if currentPage != 1 %}

            <li class="page-item"><a class="page-link" href="{{ url('exercise_index', {'page': currentPage - 1, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">{{ currentPage - 1 }}</a></li>

        {% endif %}

        <li class="page-item active">
            <span class="page-link">
            {{ currentPage }}
            <span class="sr-only">(current)</span>
        </span>
        </li>

        {% if currentPage < totalPages %}

            <li class="page-item"><a class="page-link" href="{{ url('exercise_index', {'page': currentPage + 1, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">{{ currentPage + 1 }}</a></li>

        {% endif %}

        {% if currentPage + 1 < totalPages %}

            <li class="page-item"><a class="page-link" href="{{ url('exercise_index', {'page': currentPage + 2, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">{{ currentPage + 2 }}</a></li>

        {% endif %}

        {% if currentPage + 2 < totalPages %}

            <li class="page-item"><a class="page-link" href="{{ url('exercise_index', {'page': currentPage + 3, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">{{ currentPage + 3 }}</a></li>

        {% endif %}

        <li class="page-item {% if currentPage == totalPages %} disabled {% endif %}">
            <a class="page-link" href="{{ url('exercise_index', {'page': currentPage + 1, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">Next</a>
        </li>

        <li class="page-item {% if currentPage == totalPages %} disabled {% endif %}">
            <a class="page-link" href="{{ url('exercise_index', {'page': totalPages, 'limit': limit, 'type': (currentType) ? currentType.id : null }) }}">Last</a>
        </li>
    </ul>
</nav>